{
  "name": "@universityofmaryland/umd-element-footer",
  "version": "0.0.1",
  "description": "UMD Footer Component",
  "main": "build/index.js",
  "module": "build/index.js",
  "types": "build/index.d.ts",
  "license": "MIT",
  "repository": "",
  "files": [
    "build"
  ],
  "scripts": {
    "clean": "rm -rf build",
    "bundle:build": "esbuild --bundle examples/index.js --minify --keep-names --outfile=build/bundle.js --format=esm",
    "bundle:local": "esbuild --watch --bundle examples/index.js --keep-names --outfile=examples/bundle.js --format=esm",
    "styles:build": "tailwindcss --minify -i ./source/index.css -o ./build/styles.css",
    "styles:local": "tailwindcss --watch -i ./source/index.css -o ./examples/styles.css",
    "build": "tsc && npm run styles:build && npm run bundle:build",
    "start": "tsc -w  & npm run bundle:local & npm run styles:local"
  },
  "devDependencies": {
    "esbuild": "^0.19.5",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^8.0.1",
    "prettier": "^2.0.3",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@universityofmaryland/design-system-configuration": "^0.0.9"
  }
}
